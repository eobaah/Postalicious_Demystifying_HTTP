extends layout

block content
  .main-wrapper
    .heading
      h1 Postalicious
    .inputs
      .method.child-inputs
        .method-dropdown.methods
          h2 Method
          form
            select.http-verb( name="http-verbs")
              option( value="GET")
                | GET
              option( value="POST")
                | POST
              option( value="PUT")
                | PUT
              option( value="DELETE")
                | DELETE
        .method-host.methods
          h2 Host
          .host-input
            input( id="host-url", type="text" name="host" placeholder="enter url here...")
      .query.child-inputs
        h2 Query Parameters
        .form-key-value
          .key-value-pairs
            input.query-data( type="text" name="key1" placeholder="key")
            input.query-data( type="text" name="value1" placeholder="value")
          .key-value-pairs
            input.query-data( type="text" name="key2" placeholder="key")
            input.query-data( type="text" name="value2" placeholder="value")
          .key-value-pairs
            input.query-data( type="text" name="key3" placeholder="key")
            input.query-data( type="text" name="value3" placeholder="value")
      .headers.child-inputs
        h2 Headers
        .form-key-value
          .key-value-pairs
            input.headers-data( type="text" name="key4" placeholder="key")
            input.headers-data( type="text" name="value4" placeholder="value")
          .key-value-pairs
            input.headers-data( type="text" name="key5" placeholder="key")
            input.headers-data( type="text" name="value5" placeholder="value")
          .key-value-pairs
            input.headers-data( type="text" name="key6" placeholder="key")
            input.headers-data( type="text" name="value6" placeholder="value")
    .buttons
      .request-btn
        button(onclick="buildRequest()")
          | Build Request
      .send-btn
        button(onclick="finalBuild()")
          | Build and Send
    .bottom-section
      .bottom-left
        .body-section
          h2 Body
          textarea.textBody(rows="10" cols="50" name='textarea')
      .bottom-right
        .btm-rt-tabs
          button.tablinks(onclick="selectTab( event, 'Request' )")
            | Request
          button.tablinks(onclick="selectTab( event, 'Response' )")
            | Response
        .btm-rt-display
          #Request.tabcontent
            |#{textBody}
          #Response.tabcontent
            | This content displays the response
